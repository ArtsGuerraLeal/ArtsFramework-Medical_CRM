{% extends 'base_admin.html.twig' %}

{% block title %}Descuentos{% endblock %}

{% block body %}

<div class="card">
    <div class="card-header"><i class=""></i>Descuento
    </div>
    
        <div class="card-body">

       
        <table class="table table-bordered table-striped " >
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ discount.name }}</td>
            </tr>
             <tr>
                <th>Monto</th>
                {% if discount.type == 0 %}
                <td>${{ discount.amount }}</td>

                {% else %}
                <td>{{ discount.amount }}%</td>

                {% endif %}
            </tr>
            <tr>
                <th>Tipo</th>
                {% if discount.type == 0 %}
                <td>Monto</td>

                {% else %}
                <td>Porcentage</td>

                {% endif %}
            </tr>
           
        </tbody>
    </table>



    <a href="{{ path('discount_index') }}">Catalogo</a>

        </div>

        
</div>

    

  
{% endblock %}

