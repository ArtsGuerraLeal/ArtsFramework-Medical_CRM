{% extends 'base_admin.html.twig' %}

{% block title %}Vendor index{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><i class="fas fa-table"></i>Proveedores</div>
        <div class="card-body">

    <table class="table table-bordered table-striped " id="zero_config" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendor in vendors %}
            <tr>
                <td>{{ vendor.id }}</td>
                <td>{{ vendor.name }}</td>
                <td>{{ vendor.email }}</td>
                <td>
                     
                    <div class="btn btn-primary btn-sm my-1">
                        <a class="text-white" href="{{ path('vendor_show', {'id': vendor.id}) }}">Detalles</a>

                    </div>
                    <div class="btn btn-primary btn-sm">
                        <a class="text-white" href="{{ path('vendor_edit', {'id': vendor.id}) }}">Editar</a>
                    </div>
                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vendor_new') }}">Create new</a>
{% endblock %}

{% block pagejs %}

    <script src="{{ asset('theme/assets/extra-libs/datatables.net/js/jquery.dataTables.min.js') }}"></script>

    <script>

        $('#zero_config').DataTable({
            "order": [
                [0, "desc"]
            ]
        });
    
    </script>
{% endblock %}