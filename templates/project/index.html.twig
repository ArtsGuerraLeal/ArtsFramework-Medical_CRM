{% extends 'base_admin.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><i class="fas fa-table"></i>Projectos</div>
        <div class="card-body">
           <table class="table table-bordered table-striped " id="zero_config" >
        <thead>
        <tr>
                <th style="width:10%">ID</th>
          

                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
               
                <td>{{ project.id }}</td>
                <td>{{ project.client.name }}</td>


        

                <td>
                    <div class="btn btn-primary btn-sm my-1">
                        <a class="text-white" href="{{ path('project_show', {'id': project.id}) }}">Detalles</a>

                    </div>
                    <div class="btn btn-primary btn-sm">
                        <a class="text-white" href="{{ path('project_edit', {'id': project.id}) }}">Editar</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn btn-primary ">
    <a class="text-white" href="{{ path('project_new') }}">Nuevo Projecto</a>

    
</div>

{% endblock %}

{% block pagejs %}
    <script src="../theme/assets/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="../theme/dist/js/pages/datatable/datatable-basic.init.js"></script>
{% endblock %}



