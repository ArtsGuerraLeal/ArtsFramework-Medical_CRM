{% extends 'base_admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><i class="fas fa-table"></i>Categorias</div>
        <div class="card-body">
           <table class="table table-bordered table-striped " id="zero_config" >
        <thead>
        <tr>
                <th style="width:10%">ID</th>
                <th style="width:10%">Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>

                <td>
                    <div class="btn btn-primary btn-sm my-1">
                        <a class="text-white" href="{{ path('category_show', {'id': category.id}) }}">Detalles</a>

                    </div>
                    <div class="btn btn-primary btn-sm">
                        <a class="text-white" href="{{ path('category_edit', {'id': category.id}) }}">Editar</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a class="btn btn-primary " href="{{ path('category_new') }}">Nueva Categoria</a>
</div>

{% endblock %}

{% block pagejs %}
    <script src="../theme/assets/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="../theme/dist/js/pages/datatable/datatable-basic.init.js"></script>
{% endblock %}
